<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- core CSS -->
    <link href="~/Content/corlate/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/corlate/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/corlate/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/corlate/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/corlate/css/main.css" rel="stylesheet">
    <link href="~/Content/corlate/css/responsive.css" rel="stylesheet">

    <link rel="shortcut icon" href="~/Content/corlate/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/corlate/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/corlate/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/corlate/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/corlate/images/ico/apple-touch-icon-57-precomposed.png">

    @Styles.Render("~/Content/css")
</head><!--/head-->
<body class="homepage">
    <header id="header" class="col-md-2">
        <nav class="navbar navbar-inverse" role="banner">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse ">
                <ul class="nav nav-pills nav-stacked">
                    <li><h2 class="white"> Yazılıma Dair Herşey</h2></li>
                    @{
                        string home = "Ana Sayfa", aboutUs = "Hakkımda", questions = "Sorular", pending = "Onay Bekleyen";
                        if ((string) Session["Lang"] == "English")
                        {
                            home = "Home";
                            aboutUs = "About Me";
                            questions = "Questions";
                            pending = "Pending Approval";
                        }
                    }
                    <li class="@(ViewBag.active == "Home" ? "active" : "")">@Html.ActionLink(home, "Index", "Home")</li>
                    <li class="@(ViewBag.active == "Aboutus" ? "active" : "")">@Html.ActionLink(aboutUs, "Create", "Aboutus")</li>
                    <li class="@(ViewBag.active == "Blog" ? "active" : "")">@Html.ActionLink("Blog", "Bloglist", "Blogs")</li>
                    <li class="@(ViewBag.active == "Questions" ? "active" : "")">@Html.ActionLink(questions, "Questions", "Questions")</li>
                    <li class="@(ViewBag.active == "PendingApproval" ? "active" : "")">@Html.ActionLink(pending, "PendingApproval", "Questions")</li>
                    <li><h6 class="h6">@Html.Partial("_LoginPartial")</h6></li>
                </ul>
            </div>
        </nav><!--/nav-->
    </header><!--/header-->

    <div class="body-content col-md-10">
        @RenderBody()
    </div>

    <script src="~/Content/corlate/js/jquery.js"></script>
    <script src="~/Content/corlate/js/bootstrap.min.js"></script>
    <script src="~/Content/corlate/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/corlate/js/jquery.isotope.min.js"></script>
    <script src="~/Content/corlate/js/main.js"></script>
    <script src="~/Content/corlate/js/wow.min.js"></script>
    @RenderSection("scripts", required: false)

    <script src="~/Content/ckeditor_4.6.2_standard/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("editor1");</script>
    <script>CKEDITOR.replace("editor2");</script>

</body>
</html>